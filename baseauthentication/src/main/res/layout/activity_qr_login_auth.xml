<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_login" />

        <include
            android:id="@+id/layout_option_login"
            layout="@layout/view_option_login" />

        <include
            android:id="@+id/layout_login"
            layout="@layout/view_login" />

        <include
            android:id="@+id/layout_device_limit"
            layout="@layout/view_device_limit" />

        <include
            android:id="@+id/layout_sign_up"
            layout="@layout/view_sign_up" />

        <include
            android:id="@+id/layout_forgot_password"
            layout="@layout/view_forgot_password" />


    </RelativeLayout>
</layout>